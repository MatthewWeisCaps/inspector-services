<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <groupId>org.sireum.hamr</groupId>
    <artifactId>inspector-services</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>inspector-services</name>
    <description>API for services provided to the inspector-gui</description>

    <properties>
        <generated.repo>${project.basedir}/generated/repo</generated.repo>

        <sireum.version>3.3.1</sireum.version>
        <art.version>0.1.0-SNAPSHOT</art.version>
        <java.version>11</java.version>
        <scala.version>2.12.7</scala.version>

        <hamr.source.jarfile>building-control-gen-alarm-ui_2.12-0.1.0-SNAPSHOT.jar</hamr.source.jarfile>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>

    <repositories>
        <repository>
            <id>project.local.generated</id>
            <name>generated</name>
            <url>file:${generated.repo}</url>
        </repository>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.sireum</groupId>
            <artifactId>library_2.12</artifactId>
            <version>${sireum.version}</version>
        </dependency>
        <dependency>
            <groupId>org.sireum</groupId>
            <artifactId>art_2.12</artifactId>
            <version>${art.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.github.MatthewWeisCaps</groupId>
            <artifactId>inspector-capabilities</artifactId>
            <version>master-97ad2111fb-1</version>
            <exclusions>
                <exclusion>
                    <groupId>org.sireum</groupId>
                    <artifactId>art_2.12</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.sireum</groupId>
                    <artifactId>library_2.12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.github.MatthewWeisCaps</groupId>
            <artifactId>inspector-stream</artifactId>
            <version>c77d5238e5</version>
            <exclusions>
                <exclusion>
                    <groupId>org.sireum</groupId>
                    <artifactId>art_2.12</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.sireum</groupId>
                    <artifactId>library_2.12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.github.MatthewWeisCaps</groupId>
            <artifactId>inspector-common</artifactId>
            <version>5fc7be7018</version>
            <exclusions>
                <exclusion>
                    <groupId>org.sireum</groupId>
                    <artifactId>art_2.12</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.sireum</groupId>
                    <artifactId>library_2.12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <version>17.0.0</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/java</source>
                                <source>src/main/scala</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>3.0.0-M1</version>
                <executions>
                    <execution>
                        <id>install-art-jar</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <groupId>org.sireum</groupId>
                            <artifactId>art_2.12</artifactId>
                            <version>${art.version}</version>
                            <file>${project.basedir}/repo/art_2.12-${art.version}.jar</file>
                            <packaging>jar</packaging>
                            <generatePom>true</generatePom>
                            <localRepositoryPath>${generated.repo}</localRepositoryPath>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.0.0-M2</version>
                <executions>
                    <execution>
                        <id>enforce-version</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <rules>
                                <requireSameVersions>
                                    <dependencies>
                                        <dependency>org.sireum.art_2.12</dependency>
                                    </dependencies>
                                </requireSameVersions>
                            </rules>
                            <fail>true</fail>
                            <failFast>true</failFast>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>scala-maven-plugin</artifactId>
                <version>4.2.0</version>
                <executions>
                    <execution>
                        <id>scala-compile-first</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <scalaVersion>${scala.version}</scalaVersion>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>